<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/chatgpt_green">

    <ImageView
        android:id="@+id/chatGPT_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/chatgpt_icon"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/km_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:src="@drawable/km_logo"/>
    
    <TextView
        android:id="@+id/recyclerView_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am ChatGPT, a language model created by OpenAI. I am designed to help answer questions and provide information on a wide range of topics. How can I assist you today?"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/chatGPT_icon"
        android:justificationMode="inter_word"/>

</RelativeLayout>